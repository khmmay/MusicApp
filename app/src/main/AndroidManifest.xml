<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.may.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/title_activity_songs"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/title_activity_albums"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".InterpretsActivity"
            android:label="@string/title_activity_interprets"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/title_activity_playlists"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>